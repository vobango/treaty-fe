{
  "name": "cofind-front-end-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "firebase": "^7.13.2",
    "isomorphic-unfetch": "^3.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-query": "^1.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "dev": "run-p build:styles start",
    "dev:watch": "run-p build:styles start prettier",
    "start": "react-scripts start",
    "build": "env NODE_ENV=production run-s build:styles build:app",
    "build:app": "react-scripts build",
    "build:styles": "postcss src/styles/index.css -o src/styles/tailwind.css",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:coverage": "CI=true npm test -- --coverage",
    "eject": "react-scripts eject",
    "prettier": "onchange '**/*.js' -- prettier --write {{changed}}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=true npm test"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^7.2.1",
    "autoprefixer": "^9.7.4",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-fetch-mock": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "tailwindcss": "^1.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "!<rootDir>/node_modules/",
      "src/**/*.js",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/utils/fetch.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 80,
        "lines": 90,
        "statements": 80
      }
    }
  }
}
